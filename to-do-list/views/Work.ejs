<%- include("partials/header.ejs")%>
<main>
  <div class="box" id="heading">
    <h1>Work List</h1>
  </div>
  <div class="box">
    <% if(locals.List){%> <% for(item of List){%>
    <div class="item">
      <input type="checkbox" name="" id="" />
      <p><%=item.text%></p>
    </div>
    <%}%> <%}%>
    <form class="item" action="/work" method="post">
      <input
        type="text"
        name="newItem"
        placeholder="New Item"
        autocomplete="off"
        required
      />
      <button type="submit">+</button>
    </form>
  </div>
</main>
<%- include("partials/footer.ejs")%>
